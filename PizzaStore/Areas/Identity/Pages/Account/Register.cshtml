<div class="nk-block nk-block-middle nk-auth-body wide-xs">
    <div class="card card-bordered">
        <div class="card-inner card-inner-lg">
            <div class="nk-block-head">
                <div class="nk-block-head-content">
                    <h4 class="nk-block-title">Register</h4>
                    <div class="nk-block-des">
                        <p>Create New Dashlite Account</p>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <div class="form-group">
                    <label class="form-label" asp-for="Input.FirstName"></label>
                    <div class="form-control-wrap">
                        <input type="text" class="form-control form-control-lg" asp-for="Input.FirstName" id="name" placeholder="Enter your name">
                    </div>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Input.LastName"></label>
                    <div class="form-control-wrap">
                        <input type="text" class="form-control form-control-lg" asp-for="Input.LastName" id="name" placeholder="Enter your name">
                    </div>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Input.Email"></label>
                    <div class="form-control-wrap">
                        <input type="text" asp-for="Input.Email" class="form-control form-control-lg" id="email" placeholder="Enter your email address or username">
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Input.Password"></label>
                    <div class="form-control-wrap">
                        <a href="#" class="form-icon form-icon-right passcode-switch lg" data-target="password">
                            <em class="passcode-icon icon-show icon ni ni-eye"></em>
                            <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
                        </a>
                        <input type="password" asp-for="Input.Password" class="form-control form-control-lg" id="password" placeholder="Enter your passcode">
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Input.ConfirmPassword"></label>
                    <div class="form-control-wrap">
                        <a href="#" class="form-icon form-icon-right passcode-switch lg" data-target="passwordC">
                            <em class="passcode-icon icon-show icon ni ni-eye"></em>
                            <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
                        </a>
                        <input type="password" asp-for="Input.ConfirmPassword" class="form-control form-control-lg" id="passwordC" placeholder="Enter your passcode">
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Register</button>
                </div>
            </form>
            <div class="form-note-s2 text-center pt-4">
                Already have an account? <a asp-page ="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign in instead</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
